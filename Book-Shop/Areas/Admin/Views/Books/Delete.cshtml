@model Book_Shop.Models.ViewModel.BooksViewModel
@using Book_Shop.Extensions

<br />
<h2 class="text-info">Delete Book</h2>

<form method="post">
    <div class="p-4 border rounded row">
        <input hidden asp-for="Book.Id" />
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Book.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Book.Name" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Book.Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Book.Price" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Book.Available"></label>
                </div>
                <div class="col-8">
                    <input type="checkbox" asp-for="Book.Available" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Book.Author"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Book.Author" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Categories"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Book.Categories.Name" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Publishers"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Book.Publisher.Name" readonly class="form-control" />
                </div>
            </div>
        </div>
        <div class="col-1">

        </div>
        <div class="col-3">
            <img src="@Model.Book.Image" width="100%" class="img-fluid" />
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="Delete" />
            <a asp-action="Index" class="btn btn-success">Back to list</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
