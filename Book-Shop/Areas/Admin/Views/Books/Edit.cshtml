@model Book_Shop.Models.ViewModel.BooksViewModel
@using Book_Shop.Extensions
@{
    ViewData["Title"] = "Edit";
}
<br />
<h2 class="text-info">Edit Book</h2>

<form method="post" enctype="multipart/form-data">
    <div class="p-4 border rounded row">
        <input hidden asp-for="Book.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Book.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Book.Name" class="form-control" />
                </div>
                <span asp-validation-for="Book.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Book.Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Book.Price" class="form-control" />
                </div>
                <span asp-validation-for="Book.Price" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Book.Available"></label>
                </div>
                <div class="col-8">
                    <input type="checkbox" asp-for="Book.Available" />
                </div>
                <span asp-validation-for="Book.Available" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Book.Author"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Book.Author" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Categories"></label>
                </div>
                <div class="col-8">
                    <select asp-for="@Model.Book.CategoryId" asp-items="Model.Categories.ToSelectListItem(Model.Book.CategoryId)" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Publishers"></label>
                </div>
                <div class="col-8">
                    <select asp-for="@Model.Book.PublisherId" asp-items="Model.Publishers.ToSelectListItem(Model.Book.PublisherId)" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Book.Image"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="files" class="form-control" />
                </div>
                <span asp-validation-for="Book.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="col-1">

        </div>
        <div class="col-3">
            <img src="@Model.Book.Image" width="100%" class="img-fluid" />
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Update" />
            <a asp-action="Index" class="btn btn-success">Back to list</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
