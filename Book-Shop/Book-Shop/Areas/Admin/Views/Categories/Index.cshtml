@model IEnumerable<Book_Shop.Models.Category>
@{
    ViewData["Title"] = "Index";
}

<br />
<br />

<div class="row">
    <div class="col-12">
        <h2 style="text-align:center"> Category List</h2>
    </div><div class="col-9"></div>
    <div class="col-md-3 col-sm-6 text-right">
        <a asp-action="Create" class="btn btn-success"> <i class="fas fa-plus"></i> &nbsp; New Category</a>
    </div>
</div>
<br />
<div class="container">
    <table class="table table-striped">
        <tr class="table-info">
            <th>
                <span>Name</span>
            </th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    <partial name="_TableButtonPartial" model="item.Id" />
                </td>
            </tr>

        }
    </table>
</div>


