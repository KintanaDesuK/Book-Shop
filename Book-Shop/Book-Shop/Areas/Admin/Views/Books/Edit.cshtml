@model Book_Shop.Models.ViewModel.BookViewModel
@using Book_Shop.Extensions
@{
    ViewData["Title"] = "Edit";
}
<br />
<h2 style="text-align:center">Edit Book</h2>

<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div style="margin-top:20px"></div>
        <div class="p-4 border rounded row">
            <input hidden asp-for="Book.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Book.Name">Name</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Book.Name" class="form-control" />
                    </div>
                    <span asp-validation-for="Book.Name" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Book.Price">Price</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Book.Price" class="form-control" />
                    </div>
                    <span asp-validation-for="Book.Price" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Book.Available">Available</label>
                    </div>
                    <div class="col-8">
                        <input type="checkbox" asp-for="Book.Available" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Book.Image">Image</label>
                    </div>
                    <div class="col-8">
                        <input type="file" name="files" multiple class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Categories">Category</label>
                    </div>
                    <div class="col-8">
                        <select asp-for="@Model.Book.CategoryId" asp-items="Model.Categories.ToSelectListItem(Model.Book.CategoryId)"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Authors">Author</label>
                    </div>
                    <div class="col-8">
                        <select asp-for="@Model.Book.AuthorId" asp-items="Model.Authors.ToSelectListItem(Model.Book.AuthorId)"></select>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Publishers">Publisher</label>
                    </div>
                    <div class="col-8">
                        <select asp-for="@Model.Book.PublisherId" asp-items="Model.Publishers.ToSelectListItem(Model.Book.PublisherId)"></select>
                    </div>

                </div>
            </div>
            
            <div class="col-1">

            </div>

            <div class="col-3">
                <img src="@Model.Book.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
            </div>

            <br />
            <div class="form-group" style="text-align:center">
                <input type="submit" class="btn btn-primary" value="Update" />
                <a asp-action="Index" class="btn btn-success">Back</a>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


